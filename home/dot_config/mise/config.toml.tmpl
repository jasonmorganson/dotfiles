{{ $mise := joinPath .chezmoi.homeDir ".local/bin/mise" }}

[tools]
gh = "latest"
fzf = "latest"
delta = "latest"
helix = "latest"
gitui = "latest"
chezmoi = "latest"
starship = "latest"
cargo-binstall = "latest"
"ubi:lsd-rs/lsd" = "latest"
"aqua:BurntSushi/ripgrep" = "latest"

[env]
_.path = [
    "~/bin",
    "~/go/bin",
    ".cargo/bin",
    "~/.local/bin",
    "~/.orbstack/bin",
    "/Applications/Postgres.app/Contents/Versions/18/bin",
    "/opt/homebrew/opt/uutils-coreutils/libexec/uubin",
    "/opt/homebrew/bin",
    "/opt/homebrew/sbin",
    "/usr/local/bin",
    "/usr/bin",
    "/usr/sbin",
    "/bin",
    "/sbin"
]

# XDG
XDG_CACHE_HOME = "{{ "{{ env.HOME }}/.cache" }}"
XDG_CONFIG_HOME = "{{ "{{ env.HOME }}/.config" }}"
XDG_DATA_HOME = "{{ "{{ env.HOME }}/.local/share" }}"
XDG_STATE_HOME = "{{ "{{ env.HOME }}/.local/state" }}"

# LS_COLORS
LS_COLORS={{ output $mise "exec" "ubi:sharkdp/vivid" "--" "vivid" "--color-mode" "8-bit" "generate" "one-dark" | trim | quote }}

# GitHub
{{- with (index . "github" | default (dict "id" "" "name" "" "login" "")) -}}
{{- if .login }}
GITHUB_USER = {{ .login | quote }}
{{- end }}
{{- end }}

# HK
HK_STASH = "none"

[shell_alias]

# chezmoi
dotfiles = "chezmoi"

# Habits
ag = "rg"
tig = "gitui"
vi = "hx"

# ls
l = "lsd"
ls = "lsd"
la = "lsd --all"
ll = "lsd --long"
lt = "lsd --tree"

# git
g = "git"

# Pulumi
p = "pulumi"

# Python
py = "python"
pip = "python -m pip"

# Kube
k = "kubectl"
kns = "kubens"
kctx = "kubectx"

# Node
node = "node --experimental-transform-types"

