"ubi:lsd-rs/lsd" = "latest"
"aqua:BurntSushi/ripgrep" = "latest"

[env]
_.path = [
    "~/bin",
    "~/go/bin",
    ".cargo/bin",
    "~/.local/bin",
    "~/.orbstack/bin",
    "/Applications/Postgres.app/Contents/Versions/18/bin",
    "/opt/homebrew/opt/uutils-coreutils/libexec/uubin",
    "/opt/homebrew/bin",
    "/opt/homebrew/sbin",
    "/usr/local/bin",
    "/usr/bin",
    "/usr/sbin",
    "/bin",
    "/sbin"
]

