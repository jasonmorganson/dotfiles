{{- $mise := joinPath .chezmoi.homeDir ".local/bin/mise" -}}
{{- $output := output "sh" "-c" (print $mise " exec aqua:cli/cli -- gh api user 2>/dev/null || true") -}}
{{- $user := (and $output (fromJson $output)) | default (dict) -}}
{{- $id := (printf "%v" (index $user "id")) | default "" -}}
{{- $name := index $user "name" | default "" -}}
{{- $login := index $user "login" | default "" -}}

[data.github]
    id = {{ $id | quote }}
    name = {{ $name | quote }}
    login = {{ $login | quote }}

[git]
    autoCommit = true
    autoPush = true
