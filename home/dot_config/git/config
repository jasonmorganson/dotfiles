[include]
    path = alias
    path = color
    path = tools
    path = signing
    path = unpushed

[includeIf "gitdir:~/"]
    path = gpgsign
    path = credential

[includeIf "gitdir:/workspaces/"]
    path = codespace

[help]
    autocorrect = immediate

[fetch]
    prune = true

[pull]
    rebase = true

[commit]
    verbose = true

[push]
    default = current
    autoSetupRemote = true

[merge]
    conflictstyle = zdiff3

[rebase]
    autostash = true
    autosquash = true
    updateRefs = true
    missingCommitsCheck = error

[rerere]
    enabled = true

[diff]
    algorithm = histogram
    colorMoved = default
    colorMovedWS = allow-indentation-change
