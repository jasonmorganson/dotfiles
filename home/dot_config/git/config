[include]
    path = alias
    path = color
    path = signing
    path = unpushed
    path = credential

[includeIf "gitdir:/workspaces/"]
    path = codespace

[help]
    autocorrect = immediate

[core]
    pager = delta --diff-so-fancy

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[fetch]
    prune = true

[pull]
    rebase = true

[commit]
    verbose = true
 
[absorb]
    maxStack=100

[push]
    default = current
    autoSetupRemote = true

[merge]
    conflictstyle = zdiff3

[rebase]
    autostash = true
    autosquash = true
    updateRefs = true
    missingCommitsCheck = error

[rerere]
    enabled = true

[sequence]
	editor = interactive-rebase-tool

[interactive]
    diffFilter = delta --diff-so-fancy --color-only

[delta]
    navigate = true

[diff]
    algorithm = histogram
    colorMoved = default
    colorMovedWS = allow-indentation-change
