# XDG
{{ include "xdg.env" }}

# PATH
PATH="$HOME/.rye/shims:$HOME/.local/bin:$HOME/.orbstack/bin:/opt/homebrew/bin:/usr/local/bin:/usr/bin:/usr/sbin:/bin:/sbin"

# pkgx
{{ output "pkgx"
	"+git-scm.org^2.40"
	"+crates.io/gitui"
}}

# LS_COLORS
LS_COLORS={{ output "pkgx" "vivid" "--color-mode" "8-bit" "generate" "one-dark" | trim | quote }}

# GitHub
{{ $output := output "sh" "-c" "pkgx gh api https://api.github.com/user 2>/dev/null || true" -}}
{{- if $output -}}
{{- with (fromJson $output) -}}
{{- if and (index . "id") (index . "name") (index . "login") -}}
GITHUB_USER={{ .login | quote }}
GIT_AUTHOR_NAME={{ .name | quote }}
GIT_AUTHOR_EMAIL={{ printf "%v+%s@users.noreply.github.com" .id .login | quote }}
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"
{{- end -}}
{{- end -}}
{{- end }}

# Editor
EDITOR=hx
