set lines=40                " 40 lines of text instead of 24

set guifont=Source\ Code\ Pro\ Regular\ 10

" Hide the menu
set guioptions-=m

" Hide the tool bar
set guioptions-=T

" Hide scrollbars
set guioptions-=l
set guioptions-=r
set guioptions-=b

" Use simple dialogs rather than pop-ups
set guioptions=c

"set transparency=5      " Make the window slightly transparent
